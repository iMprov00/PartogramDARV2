<div class="card">
  <div class="card-header bg-main text-white">
    <h5 class="card-title mb-0">
      <i class="bi bi-people me-2"></i>Список пациенток
    </h5>
  </div>
  <div class="card-body">
    <!-- Фильтры -->
    <div class="row mb-4">
      <div class="col-md-4">
        <input type="text" 
               class="form-control search-input touch-friendly" 
               id="search-input" 
               placeholder="Поиск по ФИО..."
               autocomplete="off">
      </div>
      <div class="col-md-3">
        <select class="form-select touch-friendly" id="status-filter">
          <option value="all">Все статусы</option>
          <% Patient::STATUSES.each_value do |status| %>
            <option value="<%= status %>"><%= status %></option>
          <% end %>
        </select>
      </div>
      <div class="col-md-3">
        <div class="form-check touch-friendly">
          <input class="form-check-input" type="checkbox" id="date-filter-toggle">
          <label class="form-check-label" for="date-filter-toggle">
            Фильтр по дате
          </label>
        </div>
        <input type="date" 
               class="form-control mt-2 touch-friendly" 
               id="date-filter" 
               disabled>
      </div>
      <div class="col-md-2">
        <button class="btn btn-main w-100 touch-friendly" onclick="applyFilters()">
          <i class="bi bi-funnel"></i> Применить
        </button>
      </div>
    </div>

    <!-- Таблица пациентов -->
    <div class="table-responsive">
      <table class="table table-hover" id="patients-table">
        <thead>
          <tr>
            <th>#</th>
            <th>ФИО</th>
            <th>Дата поступления</th>
            <th>Статус</th>
            <th>Таймер</th>
            <th>Действия</th>
          </tr>
        </thead>
        <tbody id="patients-tbody">
          <% @patients.each_with_index do |patient, index| %>
            <tr data-patient-id="<%= patient.id %>">
              <td><%= index + 1 %></td>
              <td><strong><%= patient.full_name %></strong></td>
              <td><%= patient.admission_date.strftime('%d.%m.%Y') %></td>
              <td>
                <span class="badge bg-<%= patient.status_color %> status-badge">
                  <%= patient.status %>
                </span>
              </td>
              <td>
                <span class="badge <%= patient.timer_class %> timer-badge">
                  <%= patient.timer_text %>
                </span>
              </td>
              <td>
                <div class="btn-group btn-group-sm" role="group">
                  <a href="/patients/<%= patient.id %>/partogram" 
                     class="btn <%= patient.partogram_button_class %> touch-friendly">
                    <i class="bi bi-graph-up"></i>
                    <span class="d-none d-md-inline"><%= patient.partogram_button_text %></span>
                  </a>
                  <a href="/patients/<%= patient.id %>/edit" 
                     class="btn btn-outline-secondary touch-friendly">
                    <i class="bi bi-pencil"></i>
                    <span class="d-none d-md-inline">Изменить</span>
                  </a>
                  <button type="button" 
                          class="btn btn-outline-danger delete-btn touch-friendly"
                          data-patient-id="<%= patient.id %>"
                          data-patient-name="<%= patient.full_name %>">
                    <i class="bi bi-trash"></i>
                    <span class="d-none d-md-inline">Удалить</span>
                  </button>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <div class="d-flex justify-content-between align-items-center mt-3">
      <div class="text-muted" id="patients-count">
        Всего пациенток: <%= @patients.count %>
      </div>
      <a href="/patients/new" class="btn btn-main touch-friendly">
        <i class="bi bi-plus-circle me-1"></i> Добавить пациентку
      </a>
    </div>
  </div>
</div>

<!-- Модальное окно подтверждения удаления -->
<div class="modal fade" id="deleteModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Подтверждение удаления</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <p>Вы уверены, что хотите удалить пациентку <strong id="patient-name-to-delete"></strong>?</p>
        <p class="text-danger">Это действие нельзя отменить.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary touch-friendly" data-bs-dismiss="modal">Отмена</button>
        <button type="button" class="btn btn-danger touch-friendly" id="confirm-delete">Удалить</button>
      </div>
    </div>
  </div>
</div>