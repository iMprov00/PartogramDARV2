<div class="card card-modern fade-in-card">
  <div class="card-header-modern text-white">
    <h5 class="card-title">
      <i class="bi bi-plus-circle me-2"></i>Новая пациентка
    </h5>
  </div>
  <div class="card-body-modern">
    <form action="/patients" method="post" id="patient-form" class="form-modern">
      <!-- Основная информация -->
      <div class="form-section-modern">
        <h6 class="form-section-title-modern">
          <i class="bi bi-person-vcard"></i> Основная информация
        </h6>
        <div class="form-grid-modern">
          <div>
            <label for="full_name" class="form-label-modern">ФИО <span class="text-danger">*</span></label>
            <input type="text" 
                   class="form-control input-modern" 
                   id="full_name" 
                   name="patient[full_name]" 
                   required
                   placeholder="">
          </div>
          
          <div>
            <label for="age" class="form-label-modern">Возраст</label>
            <input type="number" 
                   class="form-control input-modern" 
                   id="age" 
                   name="patient[age]" 
                   min="14"
                   max="60"
                   placeholder="">
          </div>
          
          <div>
            <label for="gestational_age" class="form-label-modern">Срок беременности (нед.)</label>
            <input type="number" 
                   class="form-control input-modern" 
                   id="gestational_age" 
                   name="patient[gestational_age]" 
                   min="20"
                   max="45"
                   placeholder="">
          </div>
          
          <div>
            <label for="admission_date" class="form-label-modern">Дата поступления <span class="text-danger">*</span></label>
            <input type="date" 
                   class="form-control input-modern" 
                   id="admission_date" 
                   name="patient[admission_date]" 
                   required
                   value="<%= Date.today %>">
          </div>
          
          <div>
            <label for="history_number" class="form-label-modern">№ истории болезни</label>
            <input type="text" 
                   class="form-control input-modern" 
                   id="history_number" 
                   name="patient[history_number]" 
                   placeholder="Номер истории">
          </div>
          
          <div>
            <label for="parity" class="form-label-modern">Партитет</label>
            <input type="number" 
                   class="form-control input-modern" 
                   id="parity" 
                   name="patient[parity]" 
                   min="0"
                   placeholder="">
          </div>
        </div>
      </div>
      
      <!-- Время событий -->
      <div class="form-section-modern">
        <h6 class="form-section-title-modern">
          <i class="bi bi-clock"></i> Время событий
        </h6>
        <div class="form-grid-modern">
          <div>
            <label for="labor_start" class="form-label-modern">Начало родов</label>
            <input type="datetime-local" 
                   class="form-control input-modern" 
                   id="labor_start" 
                   name="patient[labor_start]">
          </div>
          
          <div>
            <label for="active_phase_start" class="form-label-modern">Начало активной фазы</label>
            <input type="datetime-local" 
                   class="form-control input-modern" 
                   id="active_phase_start" 
                   name="patient[active_phase_start]">
          </div>
          
          <div>
            <label for="membrane_rupture" class="form-label-modern">Разрыв плодных оболочек</label>
            <input type="datetime-local" 
                   class="form-control input-modern" 
                   id="membrane_rupture" 
                   name="patient[membrane_rupture]">
          </div>
        </div>
      </div>
      
      <!-- Статус и информация -->
      <div class="form-section-modern">
        <h6 class="form-section-title-modern">
          <i class="bi bi-info-circle"></i> Дополнительная информация
        </h6>
        <div class="form-grid-modern">
          <div class="col-span-2">
            <label for="status" class="form-label-modern">Статус <span class="text-danger">*</span></label>
            <select class="form-select input-modern" id="status" name="patient[status]" required>
              <% if defined?(Patient) && Patient.const_defined?(:STATUSES) %>
                <% Patient::STATUSES.each do |key, value| %>
                  <option value="<%= value %>"><%= value %></option>
                <% end %>
              <% else %>
                <option value="роды не начались">роды не начались</option>
                <option value="в родах">в родах</option>
                <option value="роды завершены">роды завершены</option>
              <% end %>
            </select>
          </div>
        </div>
        
        <div class="mt-4">
          <label for="risk_factors" class="form-label-modern">Значимые факторы риска</label>
          <textarea class="form-control input-modern" 
                    id="risk_factors" 
                    name="patient[risk_factors]" 
                    rows="3"
                    placeholder="Например: гестационный диабет, преэклампсия, многоплодная беременность..."></textarea>
        </div>
        
        <div class="mt-4">
          <label for="notes" class="form-label-modern">Примечания</label>
          <textarea class="form-control input-modern" 
                    id="notes" 
                    name="patient[notes]" 
                    rows="3"
                    placeholder="Дополнительная информация..."></textarea>
        </div>
      </div>
      
      <div class="form-actions-modern">
        <a href="/patients" class="btn btn-outline-secondary">
          <i class="bi bi-arrow-left me-1"></i>
          <span>Назад к списку</span>
        </a>
        
        <button type="submit" class="btn btn-primary">
          <i class="bi bi-check-circle me-1"></i>
          <span>Сохранить пациентку</span>
        </button>
      </div>
    </form>
  </div>
</div>